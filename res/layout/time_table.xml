<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#336699"
                android:gravity="center"
                android:text="MONDAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />
      <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout"
         android:layout_below="@id/tv1"  >
            <TextView
                android:id="@+id/tvMonC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvMonT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/linearLayout"
                android:layout_below="@id/linearLayout"
                android:background="#336699"
                android:gravity="center"
                android:text="TUESDAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

             <LinearLayout
        	 android:layout_width="fill_parent"
         	android:layout_height="wrap_content"
         	android:id="@+id/linearLayout1"
         	android:layout_below="@id/tv2"  >
            <TextView
                android:id="@+id/tvTusC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvTusT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_below="@+id/linearLayout1"
                android:background="#336699"
                android:gravity="center"
                android:text="WEDNESDAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

             <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout2"
         android:layout_below="@id/tv3"  >
            <TextView
                android:id="@+id/tvWedC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvWedT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_below="@+id/linearLayout2"
                android:background="#336699"
                android:gravity="center"
                android:text="THURSDAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

             <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout3"
         android:layout_below="@id/tv4"  >
            <TextView
                android:id="@+id/tvThurC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvThurT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_below="@+id/linearLayout3"
                android:background="#336699"
                android:gravity="center"
                android:text="FRIDAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

           <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout4"
         android:layout_below="@id/tv5"  >
            <TextView
                android:id="@+id/tvFriC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvFriT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/linearLayout4"
        android:background="#336699"
        android:gravity="center"
        android:text="SATURDAY"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout5"
         android:layout_below="@id/tv6"  >
            <TextView
                android:id="@+id/tvSatC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvSatT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
     <TextView
        android:id="@+id/tv7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/linearLayout5"
        android:background="#336699"
        android:gravity="center"
        android:text="SUNDAY"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout6"
         android:layout_below="@id/tv7"  >
            <TextView
                android:id="@+id/tvSunC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="2"
                android:text="Course Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tvSunT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="3"
                android:text="Course Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
 </RelativeLayout>
 </ScrollView>
    
</RelativeLayout>